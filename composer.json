{
	"name": "icanboogie/facets",
	"type": "library",
	"description": "Makes it easy to implement faceted search.",
	"keywords": [ "faceted", "search", "criterion", "activerecord" ],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/Facets/issues",
		"source": "https://github.com/ICanBoogie/Facets"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"icanboogie/activerecord": "2.x"
	},
	"autoload": {
		"classmap": [ "lib/" ]
	},

	"extra": {

		"icanboogie": {

			"config-path": "config",
			"config-constructor": {

				"activerecord.facets": "ICanBoogie\\ActiveRecord\\Facets\\Hooks::synthesize_config#activerecord"

			}
		}
	}
}